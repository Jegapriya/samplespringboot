node {
   def mvnHome  
   try{
       emailext body: 'Success', subject: 'testing extended email', to: 'jegapriyamunieswaran@gmail.com'
       stage('Preparation') {
          git 'https://github.com/Jegapriya/samplespringboot.git'
                   
          mvnHome = tool 'Maven'
       }
       
        stage('Build') {
           sh "${mvnHome}/bin/mvn clean install"
       }
   }
   catch(err)
   {
       emailext body: "${err}", subject: 'job failed', to: 'jegapriyamunieswaran@gmail.com'
   }
} 
  
 
